<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/login-register.css">
<div class="container d-flex justify-content-center" id="login-register"> <!-- align-items-center -->
    <div class="row">
        <div class="col-md-12"> <!-- offset-md-3 col-xl-4 offset-xl-4 -->
            <div class="card shadow text-white bg-dark mb-3">
                <div class="card-header"><h4>Register</h4></div>
                <div class="card-body">
                    <!-- <h5 class="card-title">Register</h5> -->
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="adminCode">Admin/Manager Code</label>
                            <input class="form-control" type="text" id="adminCode" name="adminCode" autofocus>
                            <div >
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid">  
                            <button class="btn btn-success btn-block">Register</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>