<% layout('layouts/boilerplate')%>

<div class="container">
    <h1>All Projects</h1>

    <% for (let project of projects){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (project.images.length) { %> <!-- test if the projects have images to show the first image, otherwise no image is shown. Louli's solution from Michelle's question lecture 530 -->
                    <img class="img-fluid" alt="" src="<%=project.images[0].url%>">
                <% }else { %>
                    <img class="img-fluid" 
                        src="https://res.cloudinary.com/specterdev/image/upload/v1613157895/MMApp/s6vnuqc9zgxyigxiry1a.jpg" alt="">
                <% } %>    
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= project.title %> </h5>
                    <p class="card-text"><%= project.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= project.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/projects/<%=project._id%>">View <%=project.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>

<script>
    const projects = {features: <%- JSON.stringify(projects) %>}
</script>