<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Project</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/projects/<%=project._id%>?_method=PUT" method="POST" novalidate class="validated-form" 
            enctype="multipart/form-data">
            <div class="mb-3">  <!-- Title -->
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="project[title]"
                    value="<%=project.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <div class="mb-3">  <!-- Description -->
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="project[description]" rows="3" required><%= project.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">  <!-- Status -->
                <div><label class="form-label" for="status">Status</label></div>
                <div class="btn-group" id="status" role="group" aria-label="Basic radio toggle button group" required>
                    <input type="radio" class="btn-check" name="project[status]" id="proposed-status" autocomplete="off">
                    <label class="btn btn-outline-secondary" for="proposed-status">Proposed</label>
                  
                    <input type="radio" class="btn-check" name="project[status]" id="active-status" autocomplete="off">
                    <label class="btn btn-outline-info" for="active-status">Active</label>
                  
                    <input type="radio" class="btn-check" name="project[status]" id="frozen-status" autocomplete="off">
                    <label class="btn btn-outline-warning" for="frozen-status">Frozen</label>

                    <input type="radio" class="btn-check" name="project[status]" id="completed-status" autocomplete="off">
                    <label class="btn btn-outline-success" for="completed-status">Completed</label>

                    <input type="radio" class="btn-check" name="project[status]" id="canceled-status" autocomplete="off">
                    <label class="btn btn-outline-danger" for="canceled-status">Canceled</label>
                  </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">  <!-- Location -->
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="project[location]"
                    value="<%=project.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            
            <div class="form-file custom-file"> <!-- Add More Images -->
                <label class="form-label" for="image">Add More Images</label>
                <input type="file" class="form-control custom-file-input" id="image" name="image" multiple>
                <label class="custom-file-label" for="image">
            </div>
            <div class="mb-3"> <!-- Delete Images -->
                <% project.images.forEach(function(img, i) { %> 
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                <% }) %>
            </div>

            <div class="mb-3"> <!-- Update button -->
                <button class="btn btn-info">Update Project</button>
            </div>
        </form>
        <a href="/projects/<%= project._id%>">Back To Project</a>

    </div>
</div>